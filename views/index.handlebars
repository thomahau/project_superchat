<div class='row'>
  {{#if name}}
  <div class='col-sm-3'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title'>CATS</h3>
      </div>
      <div class='panel-body messageFeed'>
        {{#if messages}}
        {{#each messages as |message|}}
        <h4>{{message.author}}</h4>
        <p>{{message.body}}</p>
        <hr>
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>

  <div class='col-sm-3'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title'>NEW POST</h3>
      </div>
      <div class='panel-body'>
        <form action='/message' method='post'>
          <div class='form-group'>
            <input type='hidden' name='author' value='{{name}}'>
            <textarea id='newMessage' name='messageBody' class='form-control' rows='3'></textarea>
          </div>
          <button type='submit' class='btn btn-success center-block'>Send</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class='col-sm-3 col-sm-offset-4'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h3 class='panel-title'>CHAT ROOMS</h3>
      </div>
      <div class='panel-body'>
        <form action='/user' method='post'>
          <div class='form-group'>
            <label for='username'>Username</label>
            <input type='text' id='username' name='username' class='form-control'>
          </div>
          <button type='submit' class='btn btn-success center-block'>Log In</button>
        </form>
      </div>
    </div>
  </div>
  {{/if}}
</div>
